<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>Author</th>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>by <em><%= link_to post.user.username, user_posts_path(id: post.user_id) %></em></td>
        <td><%= post.user.username %></td>
        <td><%= post.blog_entry.html_safe %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning', :id => 'edit'  %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class =>'btn btn-danger', :id => 'destroy' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

<%= link_to 'New Post', new_post_path %>


